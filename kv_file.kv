
MDNavigationLayout:
    ScreenManager:
        id : screen_manager
        MainPage:
        ProductsDeatailsPage:
        ProductsPage:
        WelcomeScreen:
        AboutPage:
        ProfilePage:

    MDNavigationDrawer:
        id: nav_drawer
        size_hint: .6,1
        MDGridLayout:
            cols:1
            
            FitImage:
                source:'src/company_logo.jpg'
                adaptive_size:True
                size_hint: 1,.2

            MDList:
                size_hint: 1,.8
                OneLineIconListItem:
                    text: 'Home'
                    on_release: 
                        app.change_screen('MainPage','left')
                        app.toggle_nav()
                    IconLeftWidget:
                        icon: "warehouse"
                OneLineIconListItem:
                    text: 'Profile'
                    on_release: 
                        app.change_screen('ProfilePage','left')
                        app.toggle_nav()
                    IconLeftWidget:
                        icon: "face-profile"
                # OneLineIconListItem:
                #     text: 'ProductsPage'
                #     on_release: 
                #         cha(nge_screen'ProductsPage','left')
                #         app.toggle_nav()
                #     IconLeftWidget:
                #         icon: "tshirt-crew"
            
            MDList:
                size_hint: 1,.2
                
                OneLineAvatarListItem:
                    text: 'About'
                    on_release: 
                        app.change_screen('AboutPage','left')
                        app.toggle_nav()
                    ImageLeftWidget:
                        source:'src/company_logo.jpg'
                        size_hint: .9,.9
                OneLineListItem:
                    text: 'Made by Tariq-Dev'

